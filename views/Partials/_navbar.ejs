<script>
    $('#aLogin').click(function(){
        $('#notloggedDiv').hide();
        $('#formDiv').show();
    });

    $('#loginForm').submit(function(event){
        event.preventDefault();
        $.ajax({
            async: true,
            type: 'POST',
            url: '/User/LoginNav',
            data: { email: $('#formEmail').val(), password: ($('#formPass').val())} ,
            success: function(isLogged) {
                if(isLogged){
                    $('#formDiv').hide();
                    checkUser();
                }
                else{
                }
            }
        });
    });

    $('#formCancel').click(function(){
        $('#formDiv').hide();
        $('#notloggedDiv').show();      
    });

    $('#aLogout').click(function(event){
        event.preventDefault();
        $.ajax({
            async: true,
            type: 'POST',
            url: '/User/Logout',
            success: function() {
                $('#formDiv').hide();
                $('#loggedDiv').hide();
                $('#notloggedDiv').show();
            }
        });
    
    })
</script>
