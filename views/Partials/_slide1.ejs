<div style="margin:0 auto;width: 200px;padding: 300px 0;">
    <form action="/Home/Search">
        <div class="form-group">
            <label>City:</label>
            <input type="text" name="city" class="form-control" placeholder="Fullerton"
                title="Alphabetic characters only" style="width: auto;" required />
        </div>
        <div class="form-group">
            <label>State:</label>
            <select name="state" class="form-control" style="width: auto;" required>
                <% include ../Partials/_states //relative path %>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
</div>

